{
    "name": "rivm-smdv-figure",
    "version": "0.0.0",
    "private": true,
    "description": "Web component to render dynamic figures using Highcharts or ECharts",
    "type": "module",
    "scripts": {
        "vite:dev": "vite",
        "vite:build": "tsc && vite build",
        "vite:preview": "vite preview",
        "prepare": "husky",
        "lint": "npm run lint:lit-analyzer && npm run lint:eslint",
        "lint:eslint": "eslint 'src/**/*.ts' ",
        "lint:lit-analyzer": "lit-analyzer",
        "format:eslint": "eslint 'src/**/*.{ts,js}' --fix",
        "format:prettier": "prettier '**/*.{cjs,html,js,json,md,ts}' --ignore-path ./.prettierignore --write"
    },
    "dependencies": {
        "@open-wc/scoped-elements": "^3.0.5",
        "@webcomponents/scoped-custom-element-registry": "^0.0.10",
        "deepmerge": "^4.3.1",
        "echarts": "^5.6.0",
        "es-toolkit": "^1.37.2",
        "highcharts": "^12.2.0",
        "lit": "^3.2.1",
        "simple-statistics": "^7.8.8",
        "slugify": "^1.6.6"
    },
    "devDependencies": {
        "@eslint/css": "^0.7.0",
        "@eslint/js": "^9.26.0",
        "@eslint/json": "^0.12.0",
        "@eslint/markdown": "^6.4.0",
        "@ianvs/prettier-plugin-sort-imports": "^4.4.1",
        "@types/echarts": "^4.9.22",
        "eslint": "^9.26.0",
        "eslint-config-prettier": "^10.1.5",
        "eslint-plugin-html": "^8.1.2",
        "eslint-plugin-prettier": "^5.4.0",
        "globals": "^16.0.0",
        "husky": "^9.1.7",
        "lint-staged": "^15.5.1",
        "lit-analyzer": "^2.0.3",
        "prettier": "^3.5.3",
        "typescript": "~5.7.2",
        "typescript-eslint": "^8.31.1",
        "vite": "^6.3.1"
    }
}
